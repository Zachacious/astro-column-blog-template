---
import 'src/css/bloghero.scss';
import 'src/css/icon.scss';
import 'src/css/global.scss';
import '@fontsource/bokor';
import '@fontsource/flamenco';
import 'src/css/hero.scss';

import IconSearch from '@/icons/search';

const onClickSearch = () =>{
  const overlay = document.getElementById('main-overlay');
  overlay?.classList.toggle('fade-in');
  // overlay?.classList.remove('opacity-0', 'fade-out');
  overlay?.classList.toggle('opacity-0');
  // overlay?.classList.toggle('fade-out');
  console.log(overlay);
};
---


  <section class=" md:h-screen border-r-2 border-accent">
    <div
      class="hero flex justify-center p-8 md:h-full"
     
    >
      <div id="main-overlay" class="bloghero__overlay absolute  bg-primarydark opacity-0"></div>
      <div class="z-0 mx-4 flex w-full max-w-7xl flex-col">
        <div class="w-full">
          <div class="navbar my-5 flex w-full items-center justify-between px-2">
            <div class="navbar-brand text-2xl font-bold">Zach Moore</div>
            <div class="navbar-nav">
              <IconSearch className="icon-sm" onClick={onClickSearch} client:load />
            </div>
          </div>
        </div>
        {/* <div class="hero-content z-0 grow"></div> */}
        <div class="hero-footer break-word z-0 mb-12 flex grow items-center  ">

        </div>
        <div class="">
          <div>
            <h1 class="post-title w-full p-4 py-10 text-5xl font-bold capitalize md:text-7xl lg:text-7xl">
              Just a dude on the internet
            </h1>

          </div>
        </div>
      </div>
    </div>
  </section>



---
import '../css/blogcard.scss';

const { post } = Astro.props;
---

<div
  class="blog-card m-5 flex cursor-pointer flex-col rounded-xl bg-gray-500"
  onclick={`window.location.href='${post.url}'`}
>
  <div
    class="blog-card__header flex flex-col justify-center rounded-t-xl bg-black px-3"
  >
    <h2 class="text-xl font-bold">{post.frontmatter.title}</h2>
  </div>
  <div class="grow p-3">
    {post.frontmatter.description}
  </div>
</div>

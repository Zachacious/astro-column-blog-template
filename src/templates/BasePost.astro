---
import '../css/layout.scss';
import '../css/global.scss';

import type { IFrontmatter } from 'astro-boilerplate-components';

import { BlogHero } from '@/partials/BlogHero';
import { BlogPost } from '@/partials/BlogPost';
import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';

export interface Props {
  content: IFrontmatter;
}

const { content } = Astro.props as Props;
const title = `${content.title} - ${AppConfig.site_name}`;
---

<Base head={{ title, description: content.description }}>
  <div class="flex w-full flex-wrap">
    <div class="md:1/2 w-full lg:w-1/2">
      <BlogHero frontmatter={content} />
    </div>
    <div class="md:1/2 h-screen w-full overflow-y-auto lg:w-1/2">
      <BlogPost frontmatter={content}>
        <slot />
      </BlogPost>
    </div>
  </div>

  <!-- <CTA /> -->
</Base>

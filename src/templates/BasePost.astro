---
import '../css/global.scss';

import type { IFrontmatter } from 'astro-boilerplate-components';

import BlogPost from '@/partials/BlogPost.astro';
// import  BlogHero  from '@/partials/BlogHero.astro';
import Hero from '@/partials/Hero.astro';
import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';

interface IBlogFrontmatter extends IFrontmatter {
  tags?: string[];
}

interface Props {
  content: IBlogFrontmatter;
}

const { content } = Astro.props as Props;
const html = Astro.props.compiledContent;
const rawText = Astro.props.rawContent;
const title = `${content.title} - ${AppConfig.site_name}`;
---

<Base head={{ title, description: content.description }}>
  <div class="flex w-full flex-wrap">
    <div class="md:2/5 w-full lg:w-2/5">
      <!-- <BlogHero frontmatter={content} /> -->
      <Hero frontmatter={content} mode="post" />
    </div>
    <div class="md:2/5 h-screen w-full lg:w-3/5 lg:overflow-y-auto">
      <BlogPost frontmatter={content} html={html} raw={rawText}>
        <slot />
      </BlogPost>
    </div>
  </div>
</Base>
